<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>User edit</h2>
      <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :名前 %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :プロフィール画像 %>
            <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
          </div>
          <div class="form-group">
            <%= f.label :自己紹介 %>
            <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "更新する", class:"btn btn-md btn-primary" %>
            <%= link_to "退会する", user_path(current_user), method: :delete, class: "btn btn-md btn-danger", "data-confirm" => "本当に退会しますか？" %>
          </div>
      <% end %>
    </div>
  </div>
</div>