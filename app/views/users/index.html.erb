<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users index</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th>Image</th>
          <th>Name</th>
          <th>Introduction</th>
          <th>Follows</th>
          <th>Followers</th>
          <th>Profile</th>
          <th colspan="6"></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "30x30" %></td>
              <td><%= user.name %></td>
              <td><%= user.introduction %></td>
              <td><%= user.followings.count %></td>
              <td><%= user.followers.count %></td>
              <td><%= link_to "詳細", user_path(user.id), class: "btn btn-sm btn-primary" %></td>
              <td>
                <% if current_user != user %>
                  <% if current_user.following?(user) %>
                    <th><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-info" %></th>
                  <% else %>
                    <th><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %></th>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>