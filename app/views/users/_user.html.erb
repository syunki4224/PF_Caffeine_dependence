<h2>User info</h2>
<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: "100x100") %>
<%= link_to '', edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#(user.id)" %>

<table class="table">
  <tr>
    <th>Name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>Introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>Follows</th>
    <th><%= link_to user.followings.count, followings_user_path(user.id) %></th>
  </tr>
  <tr>
    <th>Followers</th>
    <th><%= link_to user.followers.count, followers_user_path(user.id) %></th>
  </tr>
  <td>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <th><%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-primary rounded" %></th>
      <% else %>
        <th><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success rounded" %></th>
      <% end %>
    <% end %>
  </td>
</table>

<div class="row">
  <%= link_to "New post", new_post_path, class: "btn btn-sm btn-danger rouded" %>
</div>

