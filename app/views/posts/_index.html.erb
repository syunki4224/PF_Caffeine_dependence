<h2>New arrival</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Brand</th>
      <th>Opinion</th>
      <th>Country</th>
      <th>Comments</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
    <tr>
      <td><%= link_to user_path(post.user) do %>
      <%= attachment_image_tag(post.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "30x30") %>
      <% end %>
      </td>
      <td><%= link_to post.brand, post_path(post), class: "book_#(book.id)" %></td>
      <td><%= post.introduction %></td>
      <td><%= post.country %></td>
      <td><i class="far fa-comment">ã€€</i><%= post.post_comments.count %></td>
      <td class="favorite-btn"><%= render 'favorites/favorite', post: post %></td>
    </tr>
    <% end %>
  </tbody>
</table>