<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1><i class="fas fa-coffee"></i><strong>Coffee edit</strong></h1>
      <%= form_with model:@post, local:true do |f| %>
        <div class="form-group">
          <%= f.label :銘柄 %>
          <%= f.text_field :brand, class: 'form-control post_brand' %>
        </div>
        <div class="form-group">
          <%= f.label :原産国 %>
          <%= f.select :country, [["ブラジル", "ブラジル"], ["ベトナム", "ベトナム"], ["コロンビア", "コロンビア"], ["インドネシア", "インドネシア"], ["エチオピア", "エチオピア"], ["インド", "インド"], ["メキシコ", "メキシコ"], ["グアテマラ", "グアテマラ"], ["ペルー", "ペルー"], ["ホンジュラス", "ホンジュラス"]], include_blank: "選択して下さい", class: 'form-control post_country' %>
        </div>
        <div class="form-group">
          <%= f.label :イメージ %>
          <%= f.attachment_field :post_image, class: 'form-control-file post_image' %>
        </div>
        <div class="form-group">
          <%= f.label :説明 %>
          <%= f.text_area :introduction, class: "form-control post_introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新する", class:"btn btn-md btn-primary" %>
           <%= link_to "削除する", post_path(current_user), method: :delete, class: "btn btn-md btn-danger", "data-confirm" => "本当に削除しますか？" %>
        </div>
      <% end %>
    </div>
  </div>
</div>