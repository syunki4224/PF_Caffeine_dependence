<table class="table">
    <tbody>
      <% post.post_comments.each do |post_comment| %>
        <% post_comment_user = post_comment.user %>
        <tr>
          <td>
            <%= link_to user_path(post_comment_user), class: "user_#{post_comment_user.id}" do %>
              <%= attachment_image_tag(post_comment_user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size: "30x30") %><br/>
              <%= post_comment_user.name %>
            <% end %>
            <td><%= post_comment.comment %></td>
          </td>
          <% if post_comment.user.id == current_user.id %>
            <td><%= link_to "Destroy", post_post_comment_path(post_comment.post.id, post_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= form_with model:[post, post_comment] do |f| %>
     <%= f.text_area :comment, size:"80x5", class: "inputComment rounded" %><br>
     <%= f.submit "Comment" %>
    <% end %>
  </div>