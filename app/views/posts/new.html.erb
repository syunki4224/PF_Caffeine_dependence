<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1><i class="fas fa-coffee"></i><strong>新規投稿</strong></h1>
      <%= form_with model:@post, local:true do |f| %>
        <div class="form-group">
          <%= f.label :銘柄 %>
          <%= f.text_field :brand, class: 'form-control post_brand' %>
        </div>
        <div class="form-group">
          <%= f.label :原産国 %>
          <%= f.select :country, [["ブラジル", "ブラジル"], ["ベトナム", "ベトナム"], ["コロンビア", "コロンビア"], ["インドネシア", "インドネシア"], ["エチオピア", "エチオピア"], ["インド", "インド"], ["メキシコ", "メキシコ"], ["グアテマラ", "グアテマラ"], ["ペルー", "ペルー"], ["ホンジュラス", "ホンジュラス"]], include_blank: "選択して下さい", class: 'form-control post_country' %>
        </div>
        <div class="form-group">
          <%= f.label :イメージ %>
          <%= f.attachment_field :post_image_id, class: 'form-control-file post_image' %>
        </div>
        <div class="form-group">
          <%= f.label :説明 %>
          <%= f.text_area :introduction, class: "form-control post_introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit '投稿する', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>